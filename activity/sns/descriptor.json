{
  "name": "flogo-aws-sns",
  "type": "flogo:activity",
  "version": "0.0.1",
  "title": "Send AWS SNS",
  "description": "Send message via AWS SNS",
  "ref": "github.com/project-flogo/aws-contrib/activity/sns",
  "homepage": "https://github.com/project-flogo/aws-contrib/tree/master/activity/sns",
  "settings":[
    {
      "name": "topicARN",
      "type": "string",
      "required": "true",
      "description": "The topic ARN"
    },
    {
      "name": "region",
      "type": "string",
      "required": "true",
      "allowed" : ["us-east-2","us-east-1","us-west-1","us-west-2","ap-south-1","ap-northeast-2","ap-southeast-1","ap-southeast-2","ap-northeast-1","cn-northwest-1","ca-central-1","eu-central-1","eu-west-1","eu-west-2","sa-east-1"],
      "description": "The AWS region, uses environment setting by default"
    },
    {
      "name": "json",
      "type": "bool",
      "description": "Use json message structure"
    }
  ],
  "input":[
    {
      "name": "subject",
      "type": "string",
      "description": "The message subject"
    },
    {
      "name": "message",
      "type": "any",
      "required": "true",
      "description": "The message, either a string, object or params"
    }
  ],
  "output": [
    {
      "name": "messageId",
      "type": "string",
      "description": "The message id"
    }
  ]
}
